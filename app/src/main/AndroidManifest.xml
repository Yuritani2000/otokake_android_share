<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miraikeitai2021.otokakeandroid">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OtokakeAndroid">
        <activity
            android:name=".MainMenuActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".Example2Activity"
            android:exported="false" />
        <activity
            android:name=".PlaylistPlayActivity"
            android:exported="false" />
        <activity
            android:name=".PlaylistEditActivity"
            android:exported="true" />
        <activity
            android:name=".PlaylistActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExampleActivity"
            android:exported="true" />
        <activity
            android:name=".PlayMusicActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GamePlaylistPlayActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>